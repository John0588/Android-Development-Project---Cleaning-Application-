<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <View
        android:id="@+id/night_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/night_bg" />

    <View
        android:id="@+id/day_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/day_bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="399dp"
        android:layout_height="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/logo" />


    <Switch
        android:id="@+id/day_night_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_signIn"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/button_design"
        android:onClick="sign_in"
        android:text="SIGN IN"
        android:textColor="#FBFAFA"
        app:backgroundTint="#0E0E0E"
        app:layout_constraintEnd_toStartOf="@+id/main_signUp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_night_switch" />

    <Button
        android:id="@+id/main_signUp"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:background="@drawable/button_design"
        android:onClick="sign_up"
        android:text="SIGN UP"
        android:textColor="#FBFAFA"
        app:backgroundTint="#0E0E0E"
        app:layout_constraintBottom_toBottomOf="@+id/main_signIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_signIn"
        app:layout_constraintTop_toTopOf="@+id/main_signIn" />


</androidx.constraintlayout.widget.ConstraintLayout>


