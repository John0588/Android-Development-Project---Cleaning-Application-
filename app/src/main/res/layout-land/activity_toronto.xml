<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Toronto">

    <View
        android:id="@+id/night_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/night_bg" />

    <View
        android:id="@+id/day_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/day_bg"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="-16dp" />

    <Switch
        android:id="@+id/day_night_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="500dp"
        android:layout_marginTop="24dp"
        android:text="Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/staffCleaner2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner1"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner1"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner1"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_night_switch"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner2"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner2"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner4"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner4"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner4"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner5"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner5"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCleaner1"
        app:srcCompat="@drawable/image1" />

    <TextView
        android:id="@+id/textCleaner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:text="CLEANER 1"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffCleaner1" />

    <TextView
        android:id="@+id/textCleaner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEANER 2"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner1"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner1"
        app:layout_constraintTop_toTopOf="@+id/textCleaner1" />

    <TextView
        android:id="@+id/textCleaner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="CLEANER 3"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner2"
        app:layout_constraintTop_toTopOf="@+id/textCleaner2" />

    <TextView
        android:id="@+id/textCleaner4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:text="CLEANER 4"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffCleaner4" />

    <TextView
        android:id="@+id/textCleaner5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEANER 5"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner4"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner4"
        app:layout_constraintTop_toTopOf="@+id/textCleaner4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textCleaner6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="CLEANER 6"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner5"
        app:layout_constraintTop_toTopOf="@+id/textCleaner5" />

    <TextView
        android:id="@+id/textAvailableCleaners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Available Cleaner's"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCleaner4" />

    <TextView
        android:id="@+id/textSelectCleaners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Select 1 Cleaner's Only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAvailableCleaners" />

</androidx.constraintlayout.widget.ConstraintLayout>