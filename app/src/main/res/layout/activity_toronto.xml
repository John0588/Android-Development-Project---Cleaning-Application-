<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Toronto">

    <View
        android:id="@+id/night_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/night_bg" />

    <View
        android:id="@+id/day_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/day_bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Switch
        android:id="@+id/day_night_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/staffCleaner1"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginTop="24dp"
        android:onClick="cleaners1"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSelectCleaners"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner2"
        android:layout_width="103dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner1"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner1"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner3"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCleaner1"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner4"
        android:layout_width="103dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner5"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner5"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner5"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/staffCleaner4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCleaner3"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/staffCleaner6"
        android:layout_width="103dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="@+id/staffCleaner3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffCleaner3"
        app:layout_constraintTop_toTopOf="@+id/staffCleaner3"
        app:srcCompat="@drawable/image1" />

    <TextView
        android:id="@+id/textCleaner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:text="CLEANER 1"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffCleaner1" />

    <TextView
        android:id="@+id/textCleaner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEANER 2"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner1"
        app:layout_constraintTop_toTopOf="@+id/textCleaner1" />

    <TextView
        android:id="@+id/textCleaner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:text="CLEANER 3"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffCleaner3" />

    <TextView
        android:id="@+id/textCleaner4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEANER 4"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner3"
        app:layout_constraintTop_toTopOf="@+id/textCleaner3" />

    <TextView
        android:id="@+id/textCleaner5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:text="CLEANER 5"
        app:layout_constraintEnd_toStartOf="@+id/textCleaner6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffCleaner5" />

    <TextView
        android:id="@+id/textCleaner6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEANER 6"
        app:layout_constraintBottom_toBottomOf="@+id/textCleaner5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textCleaner5"
        app:layout_constraintTop_toTopOf="@+id/textCleaner5" />

    <TextView
        android:id="@+id/textAvailableCleaners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:text="Available Cleaner's from Toronto"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_night_switch" />

    <TextView
        android:id="@+id/textSelectCleaners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Select 1 Cleaner's Only"
        android:textColor="#EF6D6D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAvailableCleaners" />

</androidx.constraintlayout.widget.ConstraintLayout>